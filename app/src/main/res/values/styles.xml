<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="category_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">84dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="category_1">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">54dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:padding">14dp</item>
    <item name="android:textColor">@color/text</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">18sp</item>
    <item name="android:layout_marginBottom">20dp</item>
    <item name="android:background">@color/background</item>
    </style>

    <style name="app_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@color/background</item>

    </style>

    <style name="description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">134dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">128dp</item>
    </style>

</resources>
